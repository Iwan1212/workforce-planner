# Database connection string (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://workforce:workforce_dev@localhost:5433/workforce_planner

# JWT secret key - MUST be changed in production
SECRET_KEY=dev-secret-key-change-in-production

# Access token lifetime in minutes (default: 1440 = 24h)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Refresh token lifetime in minutes (default: 10080 = 7 days)
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Environment: "development" or "production"
# In production, app will refuse to start with default SECRET_KEY
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173
